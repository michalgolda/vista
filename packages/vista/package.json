{
  "name": "vista",
  "version": "0.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "clean": "rm -rf dist/",
    "build:types": "tsc -p tsconfig.dts.json",
    "build": "pnpm run clean && bun build --outdir dist/ ./src/index.ts --splitting --target node --minify && pnpm run build:types"
  },
  "dependencies": {
    "elysia": "latest",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "bun-types": "latest"
  }
}
